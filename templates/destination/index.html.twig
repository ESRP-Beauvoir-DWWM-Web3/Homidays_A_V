{% extends 'base.html.twig' %}

{% block title %} Les destinations {% endblock %}

{% block body %}

    {% if destinations is defined %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th> 
                <th>Statut</th>
               <th>Actions</th> 
              
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.title }}</td>
                <td>{{ destination.description }}</td>
                <td>{{ destination.statut ? 'Activé' : 'Désactivé' }}</td>
                <td>
                    <a href="{{ path('app_destination_show', {'id': destination.id}) }}">Voir</a>
                    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">Éditer</a>
                </td>
            </tr>  
            
    
        {% else %} 
        
      
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        
       
        </tbody>
    </table>

    <a href="{{ path('app_destination_new') }}">Ajouter une nouvelle destination</a>

    {% endif %} 

{% endblock %}
