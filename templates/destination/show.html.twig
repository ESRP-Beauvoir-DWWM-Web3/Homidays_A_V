{% extends 'base.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}

{% if destination is defined %}
    {% set entity = destination %}
    {% set name = 'destination' %}
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ destination.title }}</td>
            </tr> 
            
            <tr>
                <th>Description</th>
                <td>{{ destination.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ destination.statut ? 'Activé' : 'Désactivé' }}</td>
            </tr>
           
        </tbody>
    </table>

{% endif %}
    <a href="{{ path('app_destination_index') }}">Retour à la liste</a>

    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">Éditer</a>

    {{ include('destination/_delete_form.html.twig') }}
{% endblock %}
