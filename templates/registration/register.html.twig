{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Formumlaire d'inscription</h1>

    {{ form_start(registrationForm) }}

    <div>
            <label for="inputName">Nom</label>
             {{ form_widget(registrationForm.Name,{
            'attr':{
                'class':'form-control',
                'id':'inputName',
                'type':'text',
                    }
             } )}}
    </div>



    <div>
            <label for="inputFirstName">Pr√©nom</label>
             {{ form_widget(registrationForm.firstName,{
            'attr':{
                'class':'form-control',
                'id':'inputFirstName',
                'type':'text',
                    }
             } )}}
    </div>



    <div>
            <label for="inputBirthDate">Date de naissance</label>
             {{ form_widget(registrationForm.birthDate,{
            'attr':{
                'class':'form-control',
                'id':'inputDate',
                'type':'date',
                    }
             } )}}
    </div>


    <div>
            <label for="inputAddress">Adresse Postale</label>
             {{ form_widget(registrationForm.Address,{
            'attr':{
                'class':'form-control',
                'id':'inputAddress',
    
                    }
             } )}}
    </div>


    <div>
            <label for="inputTown">Ville :</label>
            {{ form_widget(registrationForm.Town, {
                'attr':{
                    'class':'form-control',
                    'id':'inputTown',
                }
            })}}
    </div> 


       <div>
            <label for="inputZipCode">Code postal :</label>
            {{ form_widget(registrationForm.zipCode, {
                'attr':{
                    'class':'form-control',
                    'id':'inputZipCode',
                }
            })}}
        </div>  


    <div>
            <label for="inputEmail">Votre email</label>
             {{ form_widget(registrationForm.email,{
            'attr':{
                'class':'form-control',
                'id':'inputEmail',
                'type':'email',
                    }
             } )}}
    </div>


  <div>
            <label for="inputpassword">Votre Mot de passe</label>
             {{ form_widget(registrationForm.plainPassword,{
            'attr':{
                'class':'form-control',
                'id':'inputpassword',
                'type':'password',
                    }
             } )}}
    </div>


       {#  {{ form_row(registrationForm.email) }}
