{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ category.title }}</td>
            </tr>   
            
             <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ category.statut ? 'Activé' : 'Désactivé' }}</td>
            </tr>
        
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Retour à la liste</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Éditer</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
