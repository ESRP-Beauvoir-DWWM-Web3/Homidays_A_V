{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ reservation.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ reservation.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reservation.description }}</td>
            </tr>
            <tr>
